        <activity
            android:name=".OrderManagement.DisplayOrderActivity"
            android:label="@string/title_activity_display_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".OrderManagement.AddEditOrderActivity"
            android:theme="@style/AppTheme.NoActionBar" />

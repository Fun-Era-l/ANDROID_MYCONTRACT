<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.courseproject.mycontractitegration.issueHandler.IssueActivity">
    <TextView
        android:id="@+id/issue_order_info"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@id/issue_customer_complaint"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/issue_customer_complaint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:hint="请在此处描述您的申述内容，系统将尽快派专人与您联系并帮助您解决问题"
        app:layout_constraintTop_toBottomOf="@id/issue_order_info"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/submit_issue"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/ic_menu_send"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>

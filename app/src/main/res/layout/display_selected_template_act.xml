<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.courseproject.mycontractitegration.showTemplateList.DisplaySelectedTemplateActivity">
<TextView
    android:id="@+id/display_template_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    app:layout_constraintBottom_toTopOf="@+id/display_template_content"

    >
</TextView>
    <TextView
        android:id="@+id/display_template_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/display_template_name"

        />
    <Button
        android:id="@+id/selectTemplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Select"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/display_template_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/display_template_content"
        >

    </Button>
</android.support.constraint.ConstraintLayout>
